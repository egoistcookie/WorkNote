/* pages/task-detail/index.wxss */
.task-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.task-info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.info-section {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-section:last-child {
  border-bottom: none;
}

.section-label {
  font-size: 28rpx;
  color: #969799;
  width: 160rpx;
  flex-shrink: 0;
}

.section-value {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
  word-break: break-all;
}

.time-input-wrapper {
  flex: 1;
}

.time-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #323233;
  padding: 12rpx 0;
}

.save-button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

