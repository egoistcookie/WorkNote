/* pages/import-data/index.wxss */
.import-page {
  min-height: 100vh;
  padding: 30rpx;
}

.import-page.theme-warm {
  background-color: #F0DEBF;
}

.import-page.theme-cool {
  background-color: #9ac8ec;
}

.import-header {
  margin-bottom: 30rpx;
}

.theme-warm .import-title {
  color: #B22A2A;
}

.theme-cool .import-title {
  color: #234369;
}

.import-title {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.import-tip {
  font-size: 24rpx;
  color: #969799;
  display: block;
  margin-bottom: 20rpx;
}

.import-actions-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.theme-warm .progress-container {
  background-color: #F7EBD5;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .progress-container {
  background-color: #e4e9ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.progress-container {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.theme-warm .progress-bar {
  background-color: rgba(246, 193, 44, 0.2);
}

.theme-cool .progress-bar {
  background-color: rgba(89, 139, 176, 0.2);
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.theme-warm .progress-fill {
  background: linear-gradient(90deg, #F6C12C 0%, #B22A2A 100%);
}

.theme-cool .progress-fill {
  background: linear-gradient(90deg, #598bb0 0%, #234369 100%);
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #646566;
  display: block;
  text-align: center;
}

.import-content {
  margin-bottom: 30rpx;
}

.theme-warm .import-textarea {
  color: #B22A2A;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  background-color: #F0DEBF;
}

.theme-cool .import-textarea {
  color: #234369;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  background-color: #9ac8ec;
}

.import-textarea {
  width: 100%;
  min-height: 400rpx;
  font-size: 24rpx;
  line-height: 1.6;
  font-family: 'Courier New', monospace;
  padding: 20rpx;
  border-radius: 8rpx;
}

.theme-warm .import-result {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .import-result {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.import-result {
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.result-item {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}

.result-item.success {
  color: #07c160;
  background-color: #e8f8f0;
}

.result-item.skipped {
  color: #ff9800;
  background-color: #fff4e6;
}

.result-item.failed {
  color: #ee0a24;
  background-color: #fce8e8;
}

.result-details {
  margin-top: 20rpx;
}

.theme-warm .details-title {
  color: #B22A2A;
}

.theme-cool .details-title {
  color: #234369;
}

.details-title {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 10rpx;
}

.details-scroll {
  max-height: 300rpx;
}

.detail-item {
  font-size: 22rpx;
  color: #646566;
  padding: 8rpx 0;
  line-height: 1.5;
}

