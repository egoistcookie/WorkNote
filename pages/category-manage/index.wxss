/* pages/category-manage/index.wxss */
.category-manage-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.category-manage-page.theme-warm {
  background-color: #F0DEBF;
}

.category-manage-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .header {
  background-color: #F7EBD5;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .header {
  background-color: #e4e9ec;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.theme-warm .title {
  color: #B22A2A;
}

.theme-cool .title {
  color: #234369;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.theme-warm .category-list {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .category-list {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.category-list {
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.theme-warm .category-item {
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .category-item {
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.category-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.theme-warm .category-name {
  color: #B22A2A;
}

.theme-cool .category-name {
  color: #234369;
}

.category-name {
  font-size: 30rpx;
}

.category-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.theme-warm .add-modal {
  background-color: #F7EBD5;
}

.theme-cool .add-modal {
  background-color: #e4e9ec;
}

.add-modal {
  padding: 40rpx 30rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.theme-warm .modal-title {
  color: #B22A2A;
}

.theme-cool .modal-title {
  color: #234369;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.theme-warm .modal-confirm {
  color: #B22A2A;
}

.theme-cool .modal-confirm {
  color: #234369;
}

.modal-confirm {
  font-weight: 500;
}

.modal-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.theme-warm .form-label {
  color: #B22A2A;
}

.theme-cool .form-label {
  color: #234369;
}

.form-label {
  font-size: 28rpx;
}

.theme-warm .form-input {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  color: #B22A2A;
}

.theme-cool .form-input {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  color: #234369;
}

.form-input {
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.color-picker {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  max-width: 100%;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.theme-warm .color-option.active {
  border-color: #B22A2A;
}

.theme-cool .color-option.active {
  border-color: #234369;
}

.color-option.active {
  transform: scale(1.1);
}
