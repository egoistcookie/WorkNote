/* pages/category-manage/index.wxss */
.category-manage-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #ebedf0;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
}

.category-list {
  margin: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.category-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.category-name {
  font-size: 30rpx;
  color: #323233;
}

.category-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.add-modal {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.modal-confirm {
  color: #1989fa;
  font-weight: 500;
}

.modal-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #323233;
}

.form-input {
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #323233;
}

.color-picker {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  max-width: 100%;
}

.color-option {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.color-option.active {
  border-color: #323233;
  transform: scale(1.1);
}

