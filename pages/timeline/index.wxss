/* pages/timeline/index.wxss */
.timeline-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 200rpx;
}

.tasks-section {
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.completed-tasks-section {
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.start-button-wrapper {
  padding: 0 30rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}

.start-button-wrapper .button-text {
  margin-left: 8rpx;
}

.action-buttons-wrapper {
  padding: 0 30rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.action-buttons-wrapper .button-text {
  margin-left: 8rpx;
}

.pause-btn,
.resume-btn,
.complete-btn {
  min-width: 140rpx;
}

.pause-btn {
  background-color: #ffffff !important;
  border: 1rpx solid #ebedf0 !important;
  color: #323233 !important;
}

.fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1989fa;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 999;
}

.log-modal {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.modal-confirm {
  color: #1989fa;
  font-weight: 500;
}

.modal-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.log-textarea {
  flex: 1;
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #323233;
  line-height: 1.6;
}

