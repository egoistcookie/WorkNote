/* pages/timeline/index.wxss */
.timeline-page {
  min-height: 100vh;
  padding-bottom: 200rpx;
  position: relative;
}

/* 主题切换按钮 */
.theme-toggle-btn {
  position: fixed;
  top: 20rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
}

/* 暖色调主题 */
.timeline-page.theme-warm {
  background-color: #F0DEBF;
}

.timeline-page.theme-warm .section-title {
  color: #B22A2A;
}

/* 冷色调主题 */
.timeline-page.theme-cool {
  background-color: #9ac8ec;
}

.timeline-page.theme-cool .section-title {
  color: #234369;
}

.tasks-section {
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.completed-tasks-section {
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 暖色调主题下的 section-title */
.theme-warm .section-title {
  color: #B22A2A;
}

/* 冷色调主题下的 section-title */
.theme-cool .section-title {
  color: #234369;
}

.start-button-wrapper {
  padding: 0 30rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}

.start-button-wrapper .button-text {
  margin-left: 8rpx;
}

.action-buttons-wrapper {
  padding: 0 30rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.action-buttons-wrapper .button-text {
  margin-left: 8rpx;
}

.pause-btn,
.resume-btn,
.complete-btn {
  min-width: 140rpx;
}

/* 暂停按钮样式 - 无边框，背景色完全填充 */
.theme-warm .pause-btn {
  background-color: #B22A2A !important;
}

.theme-cool .pause-btn {
  background-color: #234369 !important;
}

.pause-btn {
  border: none !important;
  position: relative !important;
}

/* 移除微信小程序button默认的::after伪元素边框 */
.pause-btn::after {
  border: none !important;
  background-color: transparent !important;
  width: 0 !important;
  height: 0 !important;
}

/* 覆盖van-button内部的button元素 - 移除所有边框 */
.pause-btn button {
  background-color: #B22A2A !important;
  border: none !important;
}

.pause-btn button::after {
  border: none !important;
  width: 0 !important;
  height: 0 !important;
  background-color: transparent !important;
}

.theme-warm .fab {
  background-color: #B22A2A;
  box-shadow: 0 4rpx 12rpx rgba(178, 42, 42, 0.3);
}

.theme-cool .fab {
  background-color: #234369;
  box-shadow: 0 4rpx 12rpx rgba(35, 67, 105, 0.3);
}

.fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.theme-warm .log-modal {
  background-color: #F7EBD5;
}

.theme-cool .log-modal {
  background-color: #e4e9ec;
}

.log-modal {
  padding: 40rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.theme-warm .modal-title {
  color: #B22A2A;
}

.theme-cool .modal-title {
  color: #234369;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.theme-warm .modal-confirm {
  color: #B22A2A;
}

.theme-cool .modal-confirm {
  color: #234369;
}

.modal-confirm {
  font-weight: 500;
}

.modal-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.theme-warm .log-textarea {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  color: #B22A2A;
}

.theme-cool .log-textarea {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  color: #234369;
}

.log-textarea {
  flex: 1;
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

