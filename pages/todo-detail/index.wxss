/* pages/todo-detail/index.wxss */
.todo-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.stats-section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  color: #fff;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.stats-value {
  font-size: 56rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.stats-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.tasks-section {
  padding: 0 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 20rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.task-item.completed {
  opacity: 0.7;
}

.task-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.task-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #dcdee0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.task-checkbox.checked {
  background-color: #07c160;
  border-color: #07c160;
}

.task-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #323233;
}

.task-description {
  font-size: 26rpx;
  color: #646566;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.task-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.task-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.task-status {
  font-size: 24rpx;
  color: #969799;
  padding: 4rpx 12rpx;
  background-color: #f7f8fa;
  border-radius: 4rpx;
}

.task-date {
  font-size: 24rpx;
  color: #969799;
}

.task-time {
  font-size: 24rpx;
  color: #969799;
  margin-left: 12rpx;
}

.task-duration {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #969799;
  margin-top: 20rpx;
}

