/* pages/todo-detail/index.wxss */
.todo-detail-page {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.todo-detail-page.theme-warm {
  background-color: #F0DEBF;
}

.todo-detail-page.theme-cool {
  background-color: #9ac8ec;
}

.stats-section {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.theme-warm .stats-card {
  background: linear-gradient(135deg, #B22A2A 0%, rgba(178, 42, 42, 0.8) 100%);
}

.theme-cool .stats-card {
  background: linear-gradient(135deg, #234369 0%, rgba(35, 67, 105, 0.8) 100%);
}

.stats-card {
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  color: #fff;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.stats-value {
  font-size: 56rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.stats-count {
  font-size: 24rpx;
  opacity: 0.8;
}

.tasks-section {
  padding: 0 30rpx;
}

.theme-warm .section-title {
  color: #B22A2A;
}

.theme-cool .section-title {
  color: #234369;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.theme-warm .task-item {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .task-item {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.task-item {
  border-radius: 12rpx;
  padding: 30rpx;
}

.task-item.completed {
  opacity: 0.7;
}

.task-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.task-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #dcdee0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.theme-warm .task-checkbox.checked {
  background-color: #B22A2A;
  border-color: #B22A2A;
}

.theme-cool .task-checkbox.checked {
  background-color: #234369;
  border-color: #234369;
}

.task-checkbox.checked {
}

.task-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #323233;
}

.task-description {
  font-size: 26rpx;
  color: #646566;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.theme-warm .task-meta {
  border-top: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .task-meta {
  border-top: 1rpx solid rgba(89, 139, 176, 0.2);
}

.task-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
}

.task-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.task-status {
  font-size: 24rpx;
  color: #969799;
  padding: 4rpx 12rpx;
  background-color: #f7f8fa;
  border-radius: 4rpx;
}

.task-date {
  font-size: 24rpx;
  color: #969799;
}

.task-time {
  font-size: 24rpx;
  color: #969799;
  margin-left: 12rpx;
}

.theme-warm .task-duration {
  color: #B22A2A;
}

.theme-cool .task-duration {
  color: #234369;
}

.task-duration {
  font-size: 24rpx;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #969799;
  margin-top: 20rpx;
}

