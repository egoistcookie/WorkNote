/* pages/todo/index.wxss */
.todo-page {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.todo-page.theme-warm {
  background-color: #F0DEBF;
}

.todo-page.theme-cool {
  background-color: #9ac8ec;
}

.quadrants-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 20rpx;
  height: calc(100vh - 120rpx);
}

.theme-warm .quadrant {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 2rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .quadrant {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 2rpx solid rgba(89, 139, 176, 0.3);
}

.quadrant {
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.theme-warm .quadrant-header {
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .quadrant-header {
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.quadrant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
}

.quadrant-title {
  font-size: 28rpx;
  font-weight: 600;
}

.theme-warm .urgent-important,
.theme-warm .important-not-urgent,
.theme-warm .urgent-not-important,
.theme-warm .not-urgent-not-important {
  color: #B22A2A;
}

.theme-cool .urgent-important,
.theme-cool .important-not-urgent,
.theme-cool .urgent-not-important,
.theme-cool .not-urgent-not-important {
  color: #234369;
}

.theme-warm .add-button {
  background-color: #F6C12C;
}

.theme-cool .add-button {
  background-color: #598bb0;
}

.add-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.tasks-list {
  flex: 1;
  overflow-y: auto;
}

.task-item {
  margin-bottom: 16rpx;
}
