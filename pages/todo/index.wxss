/* pages/todo/index.wxss */
.todo-page {
  min-height: 100vh;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}

.quadrants-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 20rpx;
  height: calc(100vh - 120rpx);
}

.quadrant {
  background-color: #ffffff;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.quadrant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.quadrant-title {
  font-size: 28rpx;
  font-weight: 600;
}

.urgent-important {
  color: #ff6b6b;
}

.important-not-urgent {
  color: #ffa726;
}

.urgent-not-important {
  color: #42a5f5;
}

.not-urgent-not-important {
  color: #66bb6a;
}

.add-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.tasks-list {
  flex: 1;
  overflow-y: auto;
}

.task-item {
  margin-bottom: 16rpx;
}
