/* pages/profile/index.wxss */
.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.profile-card {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar-section {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #ebedf0;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ebedf0;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #1989fa;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
}

.email-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.email {
  font-size: 28rpx;
  color: #969799;
}

.stats-card {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-text {
  font-size: 28rpx;
  color: #323233;
}

.menu-list {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ebedf0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.category-icon {
  background-color: rgba(25, 137, 250, 0.1);
}

.summary-icon {
  background-color: rgba(255, 152, 0, 0.1);
}

.data-icon {
  background-color: rgba(156, 39, 176, 0.1);
}

.todo-icon {
  background-color: rgba(76, 175, 80, 0.1);
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #323233;
}

.edit-modal {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
}

.edit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.edit-actions {
  display: flex;
  gap: 40rpx;
}

.edit-cancel,
.edit-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.edit-cancel {
  color: #969799;
}

.edit-confirm {
  color: #1989fa;
  font-weight: 500;
}

.edit-content {
  margin-top: 20rpx;
}

.edit-input {
  width: 100%;
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #323233;
}
