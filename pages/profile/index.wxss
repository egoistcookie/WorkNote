/* pages/profile/index.wxss */
.profile-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.profile-page.theme-warm {
  background-color: #F0DEBF;
}

.profile-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .profile-card {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .profile-card {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.profile-card {
  margin: 20rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
}

.profile-header {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar-section {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #ebedf0;
}

.theme-warm .avatar-placeholder {
  background-color: rgba(246, 193, 44, 0.2);
}

.theme-cool .avatar-placeholder {
  background-color: rgba(89, 139, 176, 0.2);
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.theme-warm .avatar-edit-icon {
  background-color: #F6C12C;
}

.theme-cool .avatar-edit-icon {
  background-color: #598bb0;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ffffff;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.theme-warm .name {
  color: #B22A2A;
}

.theme-cool .name {
  color: #234369;
}

.name {
  font-size: 36rpx;
  font-weight: 500;
}

.email-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.email {
  font-size: 28rpx;
  color: #969799;
}

.theme-warm .stats-card {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .stats-card {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.stats-card {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.theme-warm .stats-text {
  color: #B22A2A;
}

.theme-cool .stats-text {
  color: #234369;
}

.stats-text {
  font-size: 28rpx;
}

.theme-warm .menu-list {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .menu-list {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.menu-list {
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.theme-warm .menu-item {
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .menu-item {
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.theme-warm .category-icon,
.theme-warm .summary-icon,
.theme-warm .data-icon,
.theme-warm .todo-icon {
  background-color: rgba(246, 193, 44, 0.3);
}

.theme-cool .category-icon,
.theme-cool .summary-icon,
.theme-cool .data-icon,
.theme-cool .todo-icon {
  background-color: rgba(89, 139, 176, 0.3);
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.theme-warm .menu-text {
  color: #B22A2A;
}

.theme-cool .menu-text {
  color: #234369;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
}

.theme-warm .edit-modal {
  background-color: #F7EBD5;
}

.theme-cool .edit-modal {
  background-color: #e4e9ec;
}

.edit-modal {
  padding: 40rpx 30rpx;
}

.edit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.theme-warm .edit-title {
  color: #B22A2A;
}

.theme-cool .edit-title {
  color: #234369;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 500;
}

.edit-actions {
  display: flex;
  gap: 40rpx;
}

.edit-cancel,
.edit-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.edit-cancel {
  color: #969799;
}

.theme-warm .edit-confirm {
  color: #B22A2A;
}

.theme-cool .edit-confirm {
  color: #234369;
}

.edit-confirm {
  font-weight: 500;
}

.edit-content {
  margin-top: 20rpx;
}

.theme-warm .edit-input {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  color: #B22A2A;
}

.theme-cool .edit-input {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  color: #234369;
}

.edit-input {
  width: 100%;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
