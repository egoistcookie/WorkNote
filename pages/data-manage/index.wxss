/* pages/data-manage/index.wxss */
.data-manage-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.data-manage-page.theme-warm {
  background-color: #F0DEBF;
}

.data-manage-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .header {
  background-color: #F7EBD5;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .header {
  background-color: #e4e9ec;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.theme-warm .title {
  color: #B22A2A;
}

.theme-cool .title {
  color: #234369;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.actions {
  display: flex;
  align-items: center;
}

.button-text {
  margin-left: 8rpx;
}

.theme-warm .export-content {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .export-content {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.export-content {
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.theme-warm .export-textarea {
  color: #B22A2A;
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .export-textarea {
  color: #234369;
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.export-textarea {
  width: 100%;
  min-height: 800rpx;
  font-size: 24rpx;
  line-height: 1.8;
  font-family: 'Courier New', monospace;
  word-break: break-all;
  border-radius: 8rpx;
  padding: 20rpx;
}

/* 导入弹窗样式 */
.import-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 30rpx;
}

.import-header {
  margin-bottom: 30rpx;
}

.import-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
  display: block;
  margin-bottom: 10rpx;
}

.import-tip {
  font-size: 24rpx;
  color: #969799;
  display: block;
  margin-bottom: 20rpx;
}

.import-actions-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.progress-container {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #ebedf0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #F6C12C 0%, #B22A2A 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #646566;
  display: block;
  text-align: center;
}

.import-content {
  flex: 1;
  margin-bottom: 30rpx;
}

.import-textarea {
  width: 100%;
  height: 100%;
  min-height: 400rpx;
  font-size: 24rpx;
  color: #323233;
  line-height: 1.6;
  font-family: 'Courier New', monospace;
  padding: 20rpx;
  border: 1rpx solid #ebedf0;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.import-result {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.result-summary {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.result-item {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}

.result-item.success {
  color: #07c160;
  background-color: #e8f8f0;
}

.result-item.skipped {
  color: #ff9800;
  background-color: #fff4e6;
}

.result-item.failed {
  color: #ee0a24;
  background-color: #fce8e8;
}

.result-details {
  margin-top: 20rpx;
}

.details-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  display: block;
  margin-bottom: 10rpx;
}

.details-scroll {
  max-height: 300rpx;
}

.detail-item {
  font-size: 22rpx;
  color: #646566;
  padding: 8rpx 0;
  line-height: 1.5;
}


