/* pages/todo-manage/index.wxss */
.todo-manage-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.todo-manage-page.theme-warm {
  background-color: #F0DEBF;
}

.todo-manage-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .header {
  background-color: #F7EBD5;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .header {
  background-color: #e4e9ec;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.theme-warm .title {
  color: #B22A2A;
}

.theme-cool .title {
  color: #234369;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.task-count {
  font-size: 24rpx;
  color: #969799;
}

.theme-warm .filter-tabs {
  background-color: #F7EBD5;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .filter-tabs {
  background-color: #e4e9ec;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.filter-tabs {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.theme-warm .filter-tab {
  background-color: #F0DEBF;
}

.theme-cool .filter-tab {
  background-color: #9ac8ec;
}

.filter-tab {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #969799;
}

.theme-warm .filter-tab.active {
  color: #B22A2A;
  background-color: rgba(246, 193, 44, 0.3);
}

.theme-cool .filter-tab.active {
  color: #234369;
  background-color: rgba(89, 139, 176, 0.3);
}

.filter-tab.active {
  font-weight: 500;
}

.task-list {
  margin: 20rpx 30rpx;
}

.theme-warm .task-item {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .task-item {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.task-item {
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.task-item.completed {
  opacity: 0.6;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.task-checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  border: 2rpx solid #c8c9cc;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.theme-warm .task-checkbox.checked {
  background-color: #B22A2A;
  border-color: #B22A2A;
}

.theme-cool .task-checkbox.checked {
  background-color: #234369;
  border-color: #234369;
}

.task-checkbox.checked {
}

.task-title {
  font-size: 30rpx;
  color: #323233;
  flex: 1;
  text-decoration: none;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: #969799;
}

.task-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.task-description {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.6;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.theme-warm .task-meta {
  border-top: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .task-meta {
  border-top: 1rpx solid rgba(89, 139, 176, 0.2);
}

.task-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
}

.theme-warm .task-priority {
  color: #B22A2A;
  background-color: rgba(246, 193, 44, 0.2);
}

.theme-cool .task-priority {
  color: #234369;
  background-color: rgba(89, 139, 176, 0.2);
}

.task-priority {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.task-date {
  font-size: 24rpx;
  color: #969799;
}

.theme-warm .empty-state {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .empty-state {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

