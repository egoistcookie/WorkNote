/* pages/todo-manage/index.wxss */
.todo-manage-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #ebedf0;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
}

.task-count {
  font-size: 24rpx;
  color: #969799;
}

.filter-tabs {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #ebedf0;
  gap: 20rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #969799;
  background-color: #f7f8fa;
}

.filter-tab.active {
  color: #1989fa;
  background-color: rgba(25, 137, 250, 0.1);
  font-weight: 500;
}

.task-list {
  margin: 20rpx 30rpx;
}

.task-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.task-item.completed {
  opacity: 0.6;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.task-checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  border: 2rpx solid #c8c9cc;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.task-checkbox.checked {
  background-color: #1989fa;
  border-color: #1989fa;
}

.task-title {
  font-size: 30rpx;
  color: #323233;
  flex: 1;
  text-decoration: none;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: #969799;
}

.task-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.task-description {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.6;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.task-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 16rpx;
  border-top: 1rpx solid #ebedf0;
}

.task-priority {
  font-size: 24rpx;
  color: #1989fa;
  background-color: rgba(25, 137, 250, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.task-date {
  font-size: 24rpx;
  color: #969799;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

