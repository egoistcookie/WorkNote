/* pages/statistics/index.wxss */
.statistics-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.summary-section {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.chart-container {
  position: relative;
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  pointer-events: auto;
}

.chart-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 99999;
  width: 180rpx;
  height: 100rpx;
  background-color: transparent;
}

.chart-label {
  font-size: 22rpx;
  color: #969799;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.chart-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  line-height: 1.2;
}

.stats-list {
  margin: 0 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #ebedf0;
  position: relative;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.stat-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.stat-category {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.stat-right {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.stat-duration {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.stat-count {
  font-size: 24rpx;
  color: #969799;
}

.stat-progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #ebedf0;
  border-radius: 4rpx;
  overflow: hidden;
}

.stat-progress {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  margin: 40rpx 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

