/* pages/statistics/index.wxss */
.statistics-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.statistics-page.theme-warm {
  background-color: #F0DEBF;
}

.statistics-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .summary-section {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .summary-section {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.summary-section {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
}

.theme-warm .summary-title {
  color: #B22A2A;
}

.theme-cool .summary-title {
  color: #234369;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 500;
}

.chart-container {
  position: relative;
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart-canvas {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  pointer-events: auto;
}

.chart-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 99999;
  width: 180rpx;
  height: 100rpx;
  background-color: transparent;
}

.chart-label {
  font-size: 22rpx;
  color: #969799;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.theme-warm .chart-value {
  color: #B22A2A;
}

.theme-cool .chart-value {
  color: #234369;
}

.chart-value {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.2;
}

.theme-warm .stats-list {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .stats-list {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.stats-list {
  margin: 0 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.theme-warm .stat-item {
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .stat-item {
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.stat-item {
  padding: 30rpx;
  position: relative;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.stat-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.theme-warm .stat-category {
  color: #B22A2A;
}

.theme-cool .stat-category {
  color: #234369;
}

.stat-category {
  font-size: 28rpx;
  font-weight: 500;
}

.stat-right {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.theme-warm .stat-duration {
  color: #B22A2A;
}

.theme-cool .stat-duration {
  color: #234369;
}

.stat-duration {
  font-size: 28rpx;
  font-weight: 500;
}

.stat-count {
  font-size: 24rpx;
  color: #969799;
}

.theme-warm .stat-progress-bar {
  background-color: rgba(246, 193, 44, 0.2);
}

.theme-cool .stat-progress-bar {
  background-color: rgba(89, 139, 176, 0.2);
}

.stat-progress-bar {
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  overflow: hidden;
}

.stat-progress {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.theme-warm .empty-state {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .empty-state {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  margin: 40rpx 30rpx;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

