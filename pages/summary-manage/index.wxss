/* pages/summary-manage/index.wxss */
.summary-manage-page {
  min-height: 100vh;
  padding-bottom: 30rpx;
}

.summary-manage-page.theme-warm {
  background-color: #F0DEBF;
}

.summary-manage-page.theme-cool {
  background-color: #9ac8ec;
}

.theme-warm .header {
  background-color: #F7EBD5;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .header {
  background-color: #e4e9ec;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.theme-warm .title {
  color: #B22A2A;
}

.theme-cool .title {
  color: #234369;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.add-buttons {
  display: flex;
  align-items: center;
}

.log-list {
  margin: 20rpx 30rpx;
}

.theme-warm .log-item {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(246, 193, 44, 0.2);
}

.theme-cool .log-item {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(89, 139, 176, 0.2);
}

.log-item {
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.log-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.log-type-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.theme-warm .log-type-badge.morning {
  background-color: rgba(246, 193, 44, 0.3);
  color: #B22A2A;
}

.theme-cool .log-type-badge.morning {
  background-color: rgba(89, 139, 176, 0.3);
  color: #234369;
}

.theme-warm .log-type-badge.evening {
  background-color: rgba(178, 42, 42, 0.2);
  color: #B22A2A;
}

.theme-cool .log-type-badge.evening {
  background-color: rgba(35, 67, 105, 0.2);
  color: #234369;
}

.log-type-text {
  font-size: 24rpx;
}

.log-date {
  font-size: 24rpx;
  color: #969799;
}

.theme-warm .log-content {
  color: #B22A2A;
}

.theme-cool .log-content {
  color: #234369;
}

.log-content {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.theme-warm .log-actions {
  border-top: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .log-actions {
  border-top: 1rpx solid rgba(89, 139, 176, 0.2);
}

.log-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding-top: 20rpx;
}

.theme-warm .empty-state {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .empty-state {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

.theme-warm .log-modal {
  background-color: #F7EBD5;
}

.theme-cool .log-modal {
  background-color: #e4e9ec;
}

.log-modal {
  padding: 40rpx 30rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.theme-warm .modal-title {
  color: #B22A2A;
}

.theme-cool .modal-title {
  color: #234369;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.theme-warm .modal-confirm {
  color: #B22A2A;
}

.theme-cool .modal-confirm {
  color: #234369;
}

.modal-confirm {
  font-weight: 500;
}

.modal-content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.theme-warm .date-picker-section {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .date-picker-section {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.date-picker-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 8rpx;
}

.theme-warm .date-label {
  color: #B22A2A;
}

.theme-cool .date-label {
  color: #234369;
}

.date-label {
  font-size: 28rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.theme-warm .date-text {
  color: #B22A2A;
}

.theme-cool .date-text {
  color: #234369;
}

.date-text {
  font-size: 28rpx;
}

.theme-warm .log-textarea {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
  color: #B22A2A;
}

.theme-cool .log-textarea {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
  color: #234369;
}

.log-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

