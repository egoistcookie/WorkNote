/* pages/summary-manage/index.wxss */
.summary-manage-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #ebedf0;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
}

.add-buttons {
  display: flex;
  align-items: center;
}

.log-list {
  margin: 20rpx 30rpx;
}

.log-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.log-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.log-type-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.log-type-badge.morning {
  background-color: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.log-type-badge.evening {
  background-color: rgba(114, 50, 221, 0.1);
  color: #7232dd;
}

.log-type-text {
  font-size: 24rpx;
}

.log-date {
  font-size: 24rpx;
  color: #969799;
}

.log-content {
  font-size: 28rpx;
  color: #323233;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.log-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #ebedf0;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #969799;
}

.log-modal {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.modal-actions {
  display: flex;
  gap: 40rpx;
}

.modal-cancel,
.modal-confirm {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
}

.modal-cancel {
  color: #969799;
}

.modal-confirm {
  color: #1989fa;
  font-weight: 500;
}

.modal-content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.date-picker-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
}

.date-label {
  font-size: 28rpx;
  color: #323233;
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.date-text {
  font-size: 28rpx;
  color: #1989fa;
}

.log-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #323233;
  line-height: 1.6;
}

