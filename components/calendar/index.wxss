/* components/calendar/index.wxss */
.calendar-container {
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.calendar-container.theme-warm {
  background-color: #F0DEBF;
}

.calendar-container.theme-cool {
  background-color: #9ac8ec;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.theme-warm .date-selector {
  background-color: #F7EBD5;
  border: 1rpx solid #F6C12C;
}

.theme-cool .date-selector {
  background-color: #e4e9ec;
  border: 1rpx solid #598bb0;
}

.date-selector {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.theme-warm .date-text {
  color: #B22A2A;
}

.theme-cool .date-text {
  color: #234369;
}

.date-text {
  font-size: 28rpx;
  font-weight: 500;
}


.calendar-week {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.calendar-day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 100rpx;
  position: relative;
  border-radius: 8rpx;
}

.theme-warm .calendar-day.selected {
  background-color: #B22A2A;
}

.theme-cool .calendar-day.selected {
  background-color: #234369;
}

.calendar-day.selected .weekday,
.calendar-day.selected .day-number {
  color: #fff;
}

.weekday {
  font-size: 22rpx;
  color: #646566;
  margin-bottom: 8rpx;
}

.day-number {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
}

.theme-warm .calendar-day.today .day-number {
  color: #F6C12C;
}

.theme-cool .calendar-day.today .day-number {
  color: #598bb0;
}

.calendar-day.today .day-number {
  font-weight: 600;
}

.selected-indicator {
  position: absolute;
  bottom: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

/* 日期选择器包装器样式 */
.theme-warm .date-picker-wrapper {
  background-color: #F7EBD5;
}

.theme-cool .date-picker-wrapper {
  background-color: #e4e9ec;
}

.date-picker-wrapper {
  width: 100%;
  height: 100%;
}

