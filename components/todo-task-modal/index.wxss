/* components/todo-task-modal/index.wxss */
.todo-task-modal {
  padding: 30rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #F7EBD5;
}

.input-section {
  margin-bottom: 30rpx;
}

.title-input {
  width: 100%;
  font-size: 32rpx;
  color: #B22A2A;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
  background-color: transparent;
}

.title-input::placeholder {
  color: rgba(178, 42, 42, 0.5);
}

.description-input {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  font-size: 28rpx;
  color: #B22A2A;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
  background-color: transparent;
}

.description-input::placeholder {
  color: rgba(178, 42, 42, 0.5);
}

.action-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(246, 193, 44, 0.2);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.action-text {
  font-size: 24rpx;
  color: #B22A2A;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F6C12C;
  border-radius: 50%;
}

.color-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 颜色选择弹窗样式 */
.color-picker {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F7EBD5;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #B22A2A;
}

.color-grid {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 30rpx;
  overflow-y: auto;
}

.color-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-item.selected {
  border-color: #B22A2A;
  transform: scale(1.1);
}

/* 日期选择器包装器样式 */
.date-picker-wrapper {
  background-color: #F7EBD5;
  width: 100%;
  height: 100%;
}

/* 覆盖 van-datetime-picker 组件样式 */
.date-picker-wrapper /deep/ .van-picker {
  background-color: #F7EBD5 !important;
}

.date-picker-wrapper /deep/ .van-picker__toolbar {
  background-color: #F7EBD5 !important;
}

.date-picker-wrapper /deep/ .van-picker__columns {
  background-color: #F7EBD5 !important;
}

.date-picker-wrapper /deep/ .van-picker-column {
  background-color: #F7EBD5 !important;
}

