/* components/todo-task-modal/index.wxss */
.todo-task-modal {
  padding: 30rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.todo-task-modal.theme-warm {
  background-color: #F7EBD5;
}

.todo-task-modal.theme-cool {
  background-color: #e4e9ec;
}

.input-section {
  margin-bottom: 30rpx;
}

.title-input {
  width: 100%;
  font-size: 32rpx;
  padding: 20rpx 0;
  background-color: transparent;
}

.theme-warm .title-input {
  color: #B22A2A;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .title-input {
  color: #234369;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.theme-warm .title-input::placeholder {
  color: rgba(178, 42, 42, 0.5);
}

.theme-cool .title-input::placeholder {
  color: rgba(35, 67, 105, 0.5);
}

.description-input {
  width: 100%;
  min-height: 80rpx;
  max-height: 200rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  background-color: transparent;
}

.theme-warm .description-input {
  color: #B22A2A;
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .description-input {
  color: #234369;
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.theme-warm .description-input::placeholder {
  color: rgba(178, 42, 42, 0.5);
}

.theme-cool .description-input::placeholder {
  color: rgba(35, 67, 105, 0.5);
}

.action-bar {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-top: 30rpx;
  gap: 20rpx;
}

.theme-warm .action-bar {
  border-top: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .action-bar {
  border-top: 1rpx solid rgba(89, 139, 176, 0.2);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

.action-text {
  font-size: 24rpx;
}

.theme-warm .action-text {
  color: #B22A2A;
}

.theme-cool .action-text {
  color: #234369;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  flex: 0 0 auto;
  margin-left: auto;
}

.theme-warm .send-button {
  background-color: #F6C12C;
}

.theme-cool .send-button {
  background-color: #598bb0;
}

.color-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 颜色选择弹窗样式 */
.color-picker {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.color-picker.theme-warm {
  background-color: #F7EBD5;
}

.color-picker.theme-cool {
  background-color: #e4e9ec;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 30rpx;
}

.theme-warm .picker-header {
  border-bottom: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .picker-header {
  border-bottom: 1rpx solid rgba(89, 139, 176, 0.2);
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
}

.theme-warm .picker-title {
  color: #B22A2A;
}

.theme-cool .picker-title {
  color: #234369;
}

.color-grid {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 30rpx;
  overflow-y: auto;
}

.color-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-item.selected {
  border-color: #B22A2A;
  transform: scale(1.1);
}

/* 日期选择器包装器样式 */
.date-picker-wrapper {
  width: 100%;
  height: 100%;
}

.date-picker-wrapper.theme-warm {
  background-color: #F7EBD5;
}

.date-picker-wrapper.theme-cool {
  background-color: #e4e9ec;
}

/* 覆盖 van-datetime-picker 组件样式 - 暖色调 */
.theme-warm .date-picker-wrapper /deep/ .van-picker {
  background-color: #F7EBD5 !important;
}

.theme-warm .date-picker-wrapper /deep/ .van-picker__toolbar {
  background-color: #F7EBD5 !important;
}

.theme-warm .date-picker-wrapper /deep/ .van-picker__columns {
  background-color: #F7EBD5 !important;
}

.theme-warm .date-picker-wrapper /deep/ .van-picker-column {
  background-color: #F7EBD5 !important;
}

/* 覆盖 van-datetime-picker 组件样式 - 冷色调 */
.theme-cool .date-picker-wrapper /deep/ .van-picker {
  background-color: #e4e9ec !important;
}

.theme-cool .date-picker-wrapper /deep/ .van-picker__toolbar {
  background-color: #e4e9ec !important;
}

.theme-cool .date-picker-wrapper /deep/ .van-picker__columns {
  background-color: #e4e9ec !important;
}

.theme-cool .date-picker-wrapper /deep/ .van-picker-column {
  background-color: #e4e9ec !important;
}
