/* components/task-modal/index.wxss */
.task-modal {
  padding: 40rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.modal-header {
  margin-bottom: 30rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
}

.task-title-badge {
  display: flex;
  align-items: center;
  background-color: #e3f2fd;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  flex: 1;
}

.title-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #1989fa;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.task-title-input {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
}

.task-title-input::placeholder {
  color: #999;
}

.start-timer-section {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.start-timer-btn {
  width: 220rpx;
}

.start-timer-btn .button-text {
  margin-left: 8rpx;
}

.time-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.time-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.time-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #323233;
  flex: 1;
  margin-left: 20rpx;
}

.time-picker:empty::before {
  content: '选择时间';
  color: #999;
}

.category-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.category-item {
  padding: 16rpx 12rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  background-color: #f5f5f5;
  transition: all 0.3s;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.category-item.selected {
  color: #333;
  font-weight: 500;
}

.note-section {
  margin-bottom: 30rpx;
}

.note-textarea {
  width: 100%;
  min-height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  line-height: 1.5;
}

.note-textarea::placeholder {
  color: #999;
}

.save-section {
  margin-top: auto;
  padding: 0;
  padding-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  padding-left: 0rpx;
}

.delete-btn-wrapper {
  flex: 0 0 auto;
  margin-right: 80rpx;
}

.delete-btn-wrapper .delete-btn {
  min-width: 120rpx;
  max-width: 35%;
}

.save-btn-wrapper {
  flex: 0 0 auto;
}

.save-btn-wrapper .save-btn {
  min-width: 120rpx;
  max-width: 35%;
}

