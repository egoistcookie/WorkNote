/* components/task-modal/index.wxss */
.task-modal {
  padding: 40rpx 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.modal-header {
  margin-bottom: 30rpx;
}

.task-title-wrapper {
  display: flex;
  align-items: center;
}

.task-title-badge {
  display: flex;
  align-items: center;
  background-color: #e3f2fd;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  flex: 1;
}

.title-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #1989fa;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.task-title-input {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
}

.task-title-input::placeholder {
  color: #999;
}


.start-timer-section {
  margin-bottom: 40rpx;
}

.start-timer-btn {
  width: 100%;
}

.start-timer-btn .button-text {
  margin-left: 8rpx;
}

.category-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.category-item {
  padding: 16rpx 12rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
  background-color: #f5f5f5;
  transition: all 0.3s;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.category-item.selected {
  color: #333;
  font-weight: 500;
}

.note-section {
  margin-bottom: 30rpx;
}

.save-section {
  margin-top: auto;
}

.save-btn {
  width: 100%;
}

