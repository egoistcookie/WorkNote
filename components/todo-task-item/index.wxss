/* components/todo-task-item/index.wxss */
.todo-task-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.task-checkbox {
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.checkbox.checked {
  border-color: #07c160;
  background-color: #07c160;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.task-title.completed {
  text-decoration: line-through;
  color: #969799;
}

.task-description {
  font-size: 24rpx;
  color: #646566;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: #969799;
}

.task-category {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.task-duration {
  color: #1989fa;
}

.play-icon {
  margin-left: 12rpx;
  margin-top: 4rpx;
}

