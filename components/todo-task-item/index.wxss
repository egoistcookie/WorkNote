/* components/todo-task-item/index.wxss */
.theme-warm .todo-task-item {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .todo-task-item {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.2);
}

.todo-task-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.task-checkbox {
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.theme-warm .checkbox.checked {
  border-color: #B22A2A;
  background-color: #B22A2A;
}

.theme-cool .checkbox.checked {
  border-color: #234369;
  background-color: #234369;
}

.checkbox.checked {
  border-color: #B22A2A;
  background-color: #B22A2A;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.theme-warm .task-title.completed {
  color: #969799;
}

.theme-cool .task-title.completed {
  color: #80807e;
}

.task-title.completed {
  text-decoration: line-through;
  color: #969799;
}

.task-description {
  font-size: 24rpx;
  color: #646566;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: #969799;
}

.task-category {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.theme-warm .task-duration {
  color: #B22A2A;
}

.theme-cool .task-duration {
  color: #234369;
}

.task-duration {
  color: #B22A2A;
}

.play-icon {
  margin-left: 12rpx;
  margin-top: 4rpx;
}

