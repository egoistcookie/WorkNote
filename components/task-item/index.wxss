/* components/task-item/index.wxss */
.task-item {
  display: flex;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.task-time {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.theme-warm .start-time {
  color: #B22A2A;
}

.theme-cool .start-time {
  color: #234369;
}

.start-time {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.5;
}

.end-time {
  font-size: 24rpx;
  color: #969799;
  line-height: 1.5;
}

.task-content {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.theme-warm .task-card {
  background: linear-gradient(135deg, #F0DEBF 0%, #F7EBD5 100%);
  border: 1rpx solid rgba(246, 193, 44, 0.2);
}

.theme-cool .task-card {
  background: linear-gradient(135deg, #9ac8ec 0%, #e4e9ec 100%);
  border: 1rpx solid rgba(89, 139, 176, 0.2);
}

.task-card {
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.theme-warm .task-card.task-running {
  border: 2rpx solid #F6C12C;
  box-shadow: 0 4rpx 12rpx rgba(246, 193, 44, 0.3);
}

.theme-cool .task-card.task-running {
  border: 2rpx solid #598bb0;
  box-shadow: 0 4rpx 12rpx rgba(89, 139, 176, 0.3);
}

.theme-warm .task-card.task-selected {
  border: 2rpx solid #B22A2A;
  box-shadow: 0 4rpx 12rpx rgba(178, 42, 42, 0.3);
}

.theme-cool .task-card.task-selected {
  border: 2rpx solid #234369;
  box-shadow: 0 4rpx 12rpx rgba(35, 67, 105, 0.3);
}

.task-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.detail-button {
  position: absolute;
  right: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.task-title-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
  max-width: calc(100% - 60rpx);
  line-height: 1.5;
  flex-wrap: nowrap;
  overflow: hidden;
  margin-right: 40rpx;
}

.task-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  flex-shrink: 0;
  white-space: nowrap;
}

.task-description {
  font-size: 24rpx;
  color: #969799;
  font-weight: normal;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.5;
  margin-left: 8rpx;
}

.running-indicator {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  position: relative;
  z-index: 5;
}

.theme-warm .running-dot {
  background-color: #F6C12C;
}

.theme-cool .running-dot {
  background-color: #598bb0;
}

.running-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(0.8);
  }
}

.task-duration {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #646566;
  margin-bottom: 12rpx;
  gap: 8rpx;
}

.theme-warm .duration-text {
  color: #B22A2A;
}

.theme-cool .duration-text {
  color: #234369;
}

.duration-text {
  font-weight: 500;
}

.task-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

