/* components/task-item/index.wxss */
.task-item {
  display: flex;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.task-time {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.start-time {
  font-size: 28rpx;
  font-weight: 500;
  color: #323233;
  line-height: 1.5;
}

.end-time {
  font-size: 24rpx;
  color: #969799;
  line-height: 1.5;
}

.task-content {
  flex: 1;
}

.task-card {
  background: linear-gradient(135deg, #f5e6ff 0%, #ffe6f5 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.task-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.task-title {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  flex: 1;
}

.task-duration {
  font-size: 24rpx;
  color: #646566;
  margin-bottom: 12rpx;
}

.task-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

