/* components/log-input/index.wxss */
.log-input-container {
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.log-input-container.theme-warm {
  background-color: #F7EBD5;
}

.log-input-container.theme-cool {
  background-color: #e4e9ec;
}

.log-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.theme-warm .log-title {
  color: #B22A2A;
}

.theme-cool .log-title {
  color: #234369;
}

.log-title {
  font-size: 28rpx;
  font-weight: 500;
}

.theme-warm .log-input-wrapper {
  background-color: #F0DEBF;
  border: 1rpx solid rgba(246, 193, 44, 0.3);
}

.theme-cool .log-input-wrapper {
  background-color: #9ac8ec;
  border: 1rpx solid rgba(89, 139, 176, 0.3);
}

.log-input-wrapper {
  display: flex;
  align-items: flex-start;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
  min-height: 80rpx;
}

.log-content {
  flex: 1;
  min-height: 40rpx;
}

.log-text {
  font-size: 28rpx;
  color: #323233;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.log-placeholder {
  font-size: 28rpx;
  color: #969799;
}

.log-action {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  flex-shrink: 0;
}

